    <select id="selectUser" parameterType="String" resultMap="UserResultMap">
        SELECT LOGIN_ID,
               PASSWORD,
               EMAIL,
               PHONE,
               NAME,
               ROLE,
               STATUS,
               INSERT_DATE,
               UPDATE_DATE
        FROM user
        WHERE LOGIN_ID = #{loginId}
    </select>
</mapper>