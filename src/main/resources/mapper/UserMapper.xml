<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.controlsystemsample.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.example.controlsystemsample.model.User">
        <id property="id" column="ID"/>
        <result property="loginId" column="LOGIN_ID"/>
        <result property="password" column="PASSWORD"/>
        <result property="email" column="EMAIL"/>
        <result property="phone" column="PHONE"/>
        <result property="name" column="NAME"/>
        <result property="role" column="ROLE" typeHandler="com.example.controlsystemsample.typehandler.UserRoleEnumTypeHandler"/>
        <result property="status" column="STATUS"/>
        <result property="insertDate" column="INSERT_DATE"/>
        <result property="updateDate" column="UPDATE_DATE"/>
    </resultMap>

    <insert id="signup" parameterType="SignUpRequestDTO">
        INSERT INTO user
            (LOGIN_ID,
             PASSWORD,
             EMAIL,
             PHONE,
             NAME,
             ROLE,
             STATUS,
             INSERT_DATE,
             UPDATE_DATE)
        VALUES (#{loginId},
                #{password},
                #{email},
                #{phone},
                #{name},
                #{role},
                '00',
                NOW(),
                NOW()
               )
    </insert>

    <select id="selectUser" parameterType="String" resultType="User">
        SELECT LOGIN_ID,
               PASSWORD,
               EMAIL,
               PHONE,
               NAME,
               ROLE,
               STATUS,
               INSERT_DATE,
               UPDATE_DATE
        FROM user
        WHERE LOGIN_ID = #{loginId}
    </select>
</mapper>