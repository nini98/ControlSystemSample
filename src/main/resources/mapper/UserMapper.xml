<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.controlsystemsample.mapper.UserMapper">
    <insert id="signup" parameterType="com.example.controlsystemsample.dto.request.SignUpRequestDTO">
        INSERT INTO user
            (LOGIN_ID,
             PASSWORD,
             EMAIL,
             PHONE,
             NAME,
             ROLE,
             STATUS,
             INSERT_DATE,
             UPDATE_DATE)
        VALUES (#{loginId},
                #{password},
                #{email},
                #{phone},
                #{name},
                #{role},
                '00',
                NOW(),
                NOW()
               )
    </insert>

    <select id="selectUser" parameterType="String" resultType="com.example.controlsystemsample.model.User">
        SELECT LOGIN_ID,
               PASSWORD,
               EMAIL,
               PHONE,
               NAME,
               ROLE,
               STATUS,
               INSERT_DATE,
               UPDATE_DATE
        FROM user
        WHERE LOGIN_ID = #{loginId}
    </select>
</mapper>